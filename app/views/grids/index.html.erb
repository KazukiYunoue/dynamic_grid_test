<h1>Listing grids</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Views count</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @grids.each do |grid| %>
  <tr>
    <td><%= grid.name %></td>
    <td><%= grid.image %></td>
    <td><%= grid.views_count %></td>
    <td><%= grid.description %></td>
    <td><%= link_to 'Show', grid %></td>
    <td><%= link_to 'Edit', edit_grid_path(grid) %></td>
    <td><%= link_to 'Destroy', grid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

